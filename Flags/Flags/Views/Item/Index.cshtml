@model IEnumerable<Flags.Models.Quiz>

@{
    ViewBag.Title = "Flag quiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Flag quizes</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Attempts)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Completed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Average)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Countries)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        var average = item.Average.ToString("0");
        var count = 0;
        if (item.Countries != null) count = item.Countries.Count();
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attempts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Completed)
            </td>
            <td>
                @average%
            </td>
            <td>
                @Html.DisplayFor(modelItem => count)
            </td>
            <td>
                <div class="btn btn-outline-success">@Html.ActionLink("Play quiz", "Play", new { id = item.Id })</div>
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
